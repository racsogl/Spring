<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- ************************************************ -->
    <!-- ****************** APPENDERS ******************* -->
    <!-- ************************************************ -->
    <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d] (%F\:%L) %p %t %c %m%n"/>
        </layout>
    </appender>


    <appender name="LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${jboss.server.log.dir}/testcomplex.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p][%d{ISO8601}][%-4L] %F>%m%n"/>
        </layout>
    </appender>


    <appender name="SDK-SEGURIDAD-LOG" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="${jboss.server.log.dir}/testcomplex-seguridad-sdk.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%-5p][%d{ISO8601}][%-4L] %F>%m%n"/>
        </layout>
    </appender>

    <appender name="SIAN-LOG" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="${jboss.server.log.dir}/ARQ_TEST-sian.log"/>
        <param name="MaxFileSize" value="10MB"/>
        <param name="MaxBackupIndex" value="10"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>


    <!-- ************************************************ -->
    <!-- ****************** LOGGERS ********************* -->
    <!-- ************************************************ -->

    <logger name="es.cixtec.marco.seguridad" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="SDK-SEGURIDAD-LOG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="SIAN-LOG" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="SIAN-LOG"/>
        <appender-ref ref="CONSOLE"/>
    </logger>


    <logger name="es.cixtec">
        <level value="INFO"/>
    </logger>


    <root>
        <priority value="WARN"/>
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOG"/>
    </root>

</log4j:configuration>
